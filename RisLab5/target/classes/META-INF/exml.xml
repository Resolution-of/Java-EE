<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="Classes.LanguageCompanyEntity">
        <table name="language_company" schema="user"/>
        <attributes>
            <id name="idcompany">
                <column name="idcompany" precision="-1"/>
            </id>
            <basic name="name">
                <column name="name" nullable="false" length="45"/>
            </basic>
            <basic name="price">
                <column name="price" nullable="false" precision="-1"/>
            </basic>
            <basic name="wayToPay">
                <column name="way_to_pay" nullable="false" length="45"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
