<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Servlet Hello</display-name>
    <servlet>
        <servlet-name>ServletTable</servlet-name>
        <servlet-class>vadimsConfig.Servlet.ServletTable</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletTable</servlet-name>
        <url-pattern>/table</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletYearPay</servlet-name>
        <servlet-class>vadimsConfig.Servlet.ServletYearPay</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletYearPay</servlet-name>
        <url-pattern>/pay</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletPrice</servlet-name>
        <servlet-class>vadimsConfig.Servlet.ServletPrice</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletPrice</servlet-name>
        <url-pattern>/price</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletAdd</servlet-name>
        <servlet-class>vadimsConfig.Servlet.ServletAdd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAdd</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletAddNewCompany</servlet-name>
        <servlet-class>vadimsConfig.Servlet.ServletAddNewCompany</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAddNewCompany</servlet-name>
        <url-pattern>/addNew</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>table.jsp</welcome-file>
    </welcome-file-list>
</web-app>